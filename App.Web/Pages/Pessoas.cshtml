@page "/pessoas"

<h4>Lista de Pessoas!</h4>
<div class="row">
    <div class="col-md-4">
        <label>Nome</label>
        <input type="text" id="busca" class="form-control" />
    </div>
    <div class="col-md-3">
        <label>Peso Maior Que</label>
        <input type="text" id="pesoMaior" class="form-control" />
    </div>
    <div class="col-md-3">
        <label>peso Menor Que</label>
        <input type="text" id="pesomenor" class="form-control" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-info" style="margin-top: 30px" onclick="window.location.href = '/pessoas/formulario'">Adicionar Pessoa</button>
    </div>
</div>
<br />
<div class="table-responsive" id="table">
    <table class="table mb-0 table-striped" id="dataTable">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Data de Nascimento</th>
                <th>Peso</th>
                <th>Cidade</th>
                <th>Ativo</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/pages/pessoa.js"></script>
}