@page "/pessoas/formulario"

<h4>Formulário de Pessoas!</h4>

<div class="row">
    <div class="col-md-3 col-sm-12">
        <div class="form-group mb-12">
            <label>Nome</label>
            <input type="text" name="nome" class="form-control" />
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="form-group mb-12">
            <label>Data de Nascimento</label>
            <input type="date" name="dataNascimento" class="form-control" />
        </div>
    </div>
    <div class="col-md-3 col-sm-12">
        <div class="form-group mb-12">
            <label>Peso</label>
            <input type="text" name="peso" class="form-control" />
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="form-group mb-12">
            <label>Cidade</label>
            <select class="form-control" style="width: 100%; height: 100%" name="cidadeId" id="cidadeId">
            </select>
        </div>
    </div>
    <div class="col-md-1 col-sm-1">
        <div class="form-group mb-12">
            <label>Ativo</label>
            <input type="checkbox" name="ativo" class="form-control" />
        </div>
    </div>
</div>
<div class="row">
    <button onclick="window.location.href = '/pessoas'">Cancelar</button>
    <button onclick="salvar();">Salvar</button>
</div>


@section Scripts {
    <script src="~/js/pages/pessoas-formulario.js"></script>
}